<Window x:Class="Kalkulator_wsiz.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kalkulator" Width="250" Height="374" ResizeMode="NoResize">

    <Grid>
        <Frame x:Name="Main" Margin="0,35,0,0" NavigationUIVisibility="Hidden" />
        <StackPanel Orientation="Horizontal" Height="35" VerticalAlignment="Top" Background="#FFDDDDDD">
            <Button Content="Standardowy" MinWidth="90" Click="MenuItem_Standard_Click"/>
            <Button Content="Naukowy" MinWidth="70" Click="MenuItem_Scientific_Click"/>
            <Button Content="Funkcja kwadratowa" MinWidth="110" Click="MenuItem_Fkwad_Click"/>
        </StackPanel>

    </Grid>
</Window>
